{
  "expo": {
    "name": "Evenza",
    "slug": "Evenza",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Evenza_LOGO.png",
    "scheme": "evenza",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/Evenza_LOGO.png",
      "resizeMode": "contain",
      "backgroundColor": "#1b264f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iamperth.Evenza"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.iamperth.Evenza"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Evenza to access your gallery to select an event cover image.",
          "cameraPermission": "Allow Evenza to use the camera for event photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
